@model Web_Notebook.Models.Task.CreateTaskDTO

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    <style>
        /* Reset some default styles */
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Body and Main Wrapper Styles */
        body {
            font-family: Arial, sans-serif;
            display: flex;
            min-height: 100vh;
            background-color: #f3f4f6;
        }

        .main-content {
            flex-grow: 1;
            max-width: 600px;
            margin: auto;
            background-color: #ffffff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        /* Form Header */
        .header {
            text-align: center;
            margin-bottom: 30px;
        }

            .header h1 {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 10px;
            }

            .header p {
                font-size: 14px;
                color: #777;
            }

        /* Form Styles */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: #555;
            display: block;
            margin-bottom: 6px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
            color: #333;
        }

            .form-control:focus {
                border-color: #3498db;
                outline: none;
            }

        /* Button Styles */
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2c3e50;
            color: white;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            border-radius: 5px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

            .btn:hover {
                background-color: white;
            }
    </style>

    <script>
        function validateDueDate() {
            const dueDateInput = document.getElementById("DueDate");
            const dueDate = new Date(dueDateInput.value);
            const now = new Date();

            if (dueDate <= now) {
                alert("Due Date must be in the future.");
                return false;
            }
            return true;
        }
        function validateTitle() {
            const titleInput = document.getElementById("Title").value.trim();
            if (titleInput.length === 0) {
                alert("Task Title cannot be empty or contain only spaces.");
                return false;
            }
            return true;
        }

        function validateForm() {
            return validateTitle() && validateDueDate();
        }
    </script>
</head>

<body>
    @await Html.PartialAsync("_Sidebar")
    <div class="main-content">
        <!-- Form Header -->
        <div class="header">
            <h1>Create a New Task</h1>
            <p>Fill out the form below to create a new task.</p>
        </div>

        <!-- Create Task Form -->
        <form method="post" asp-action="Create" onsubmit="return validateForm()">
            <input asp-for="UserId" type="hidden" />
            <input asp-for="UpdatedAt" type="hidden" />

            <div class="form-group">
                <label asp-for="Title">Task Title</label>
                <input asp-for="Title" type="text" class="form-control" id="Title" name="Title" required />
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" id="Description" name="Description"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="Priority">Priority</label>
                <select asp-for="Priority" class="form-control" id="Priority" name="Priority" required>
                    <option value="Low">Low</option>
                    <option value="Medium">Medium</option>
                    <option value="High">High</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Status">Status</label>
                <select asp-for="Status" class="form-control" id="Status" name="Status" required>
                    <option value="Not Started">Not Started</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="DueDate">Due Date</label>
                <input asp-for="DueDate" type="datetime-local" class="form-control" id="DueDate" name="DueDate"
                       value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
            </div>

            <button type="submit" class="btn">Create Task</button>
        </form>
    </div>
</body>

</html>
