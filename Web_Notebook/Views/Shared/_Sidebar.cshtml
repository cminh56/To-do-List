@* Sidebar HTML Structure *@
<div class="sidebar">
    <div class="header">
        Hi, <span id="username">Minh</span>
    </div>
    <div class="menu">
        <a href="@Url.Action("Index", "Task")">Task Management</a>
        <a href="@Url.Action("Index", "Note")">Note Management</a>
